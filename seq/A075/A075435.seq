%o A075435 (SageMath)
%o A075435 @cached_function
%o A075435 def T(k,n):
%o A075435     if k==n: return 2^n
%o A075435     if k==0: return 0
%o A075435     return sum(binomial(2*i,i)*T(k-1,n-i) for i in (1..n-k+1))
%o A075435 A075435 = lambda n,k: T(k,n)
