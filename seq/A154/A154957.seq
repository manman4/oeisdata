%t A154957 T[n_, k_]:= Sum[(Mod[j+1,2] - Mod[j,2]), {j,0,Min[k,n-k]}];
%t A154957 Table[T[n, k], {n,0,20}, {k,0,n}]//Flatten (* _G. C. Greubel_, Mar 07 2022 *)
%o A154957 (SageMath)
%o A154957 def A154957(n,k): return sum( (j+1)%2 - j%2 for j in (0..min(k,n-k)) )
%o A154957 flatten([[A154957(n,k) for k in (0..n)] for n in (0..20)]) # _G. C. Greubel_, Mar 07 2022
