%o A385902 (Python)
%o A385902 def antihydra(start: int = 8, halt: int = 66) -> list[int]:
%o A385902     seq = []
%o A385902     a = start
%o A385902     b = 0
%o A385902     n = 0
%o A385902     while b != -1:
%o A385902         if n > halt: break
%o A385902         seq.append(b) # print(f"[{n}] -> ({a}, {b})")
%o A385902         if a % 2 == 0:
%o A385902             b += 2
%o A385902         else:
%o A385902             b -= 1
%o A385902         a += a // 2
%o A385902         n += 1
%o A385902     return seq
%o A385902 print(antihydra())
