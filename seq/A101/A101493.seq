%e A101493    1;
%e A101493    6,  5;
%e A101493   15, 14,  9;
%e A101493   28, 27, 22, 13;
%e A101493   45, 44, 39, 30, 17;
%e A101493   66, 65, 60, 51, 38, 21;
%e A101493   ...
