%o A346040 (SageMath)
%o A346040 def a(n):
%o A346040     if n == 1:
%o A346040         return 1
%o A346040     else:
%o A346040         s = n.digits(2)
%o A346040         s.reverse()
%o A346040         if s[1] == 0:
%o A346040             t = s + [0,0]
%o A346040         else:
%o A346040             t = s + [1,1,0,1]
%o A346040         del(t[1])
%o A346040         del(t[1])
%o A346040         del(t[1])
%o A346040         return sum(t[k]*2^(len(t)-1-k) for k in srange(0,len(t)))
