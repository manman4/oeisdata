%p A273317     if n = 0 then
%p A273317         2 ;
%p A273317     elif type(j,'even') then
%p A273317         1+procname(n-1,j/2) ;
%p A273317     else
%p A273317         procname(n-1,floor(j/2)) ;
%p A273317         %*(%+1) ;
