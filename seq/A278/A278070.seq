%o A278070 (SageMath)
%o A278070 def a():
%o A278070     a, b, c, d, h, e = 1, 2, 1, 8, 4, 0
%o A278070     yield a
%o A278070     while True:
%o A278070         yield b
%o A278070         e = c; c += 2
%o A278070         a, b = b, (c*a + h*b)//e
%o A278070         d += 16; h += d
%o A278070 A278070 = a()
%o A278070 [next(A278070) for _ in range(19)]
