%o A322469 (SageMath)
%o A322469 def A322469_list(len):
%o A322469     L = []
%o A322469     for n in (1..len):
%o A322469         a = 4*n - 1
%o A322469         L.append(a)
%o A322469         while 3.divides(a):
%o A322469             a //= 3
%o A322469             L.append(a)
%o A322469             a <<= 1
%o A322469             L.append(a)
%o A322469     return L
