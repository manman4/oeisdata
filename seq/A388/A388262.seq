%o A388262 (Python)
%o A388262 from sympy import nextprime
%o A388262 from itertools import count, islice
%o A388262 def sisyphus(start): # generator of Sisyphus sequence beginning at start
%o A388262     an, p = start, 1
%o A388262     while True: yield an; an = an+(p:=nextprime(p)) if an&1 else an>>1
%o A388262 def b(n): # A388038
%o A388262     return next(k for k, t in enumerate(sisyphus(n)) if t == 1)
%o A388262 def agen(): # generator of terms
%o A388262     record = -1
%o A388262     for k in count(1):
%o A388262         if (v:=b(k)) > record: yield v; record = v
%o A388262 print(list(islice(agen(), 16))) # _Michael S. Branicky_, Sep 16 2025
