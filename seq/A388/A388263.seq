%o A388263 (Python)
%o A388263 from sympy import nextprime
%o A388263 from itertools import count, islice
%o A388263 def sisyphus(start): # generator of Sisyphus sequence beginning at start
%o A388263     an, p = start, 1
%o A388263     while True: yield an; an = an+(p:=nextprime(p)) if an&1 else an>>1
%o A388263 def b(n): # A388038
%o A388263     return next(k for k, t in enumerate(sisyphus(n)) if t == 1)
%o A388263 def agen(): # generator of terms
%o A388263     record = -1
%o A388263     for k in count(1):
%o A388263         if (v:=b(k)) > record: yield k; record = v
%o A388263 print(list(islice(agen(), 16))) # _Michael S. Branicky_, Sep 16 2025
