%N A388288 The least number whose sum of digits in base b is divisible by b for all bases b = 2, 3, ..., n.
%t A388288 bmax[n_] := Module[{b = 2}, While[Divisible[DigitSum[n, b], b], b++]; --b];
%t A388288 seq[nmax_] := Module[{s = {}, bm = 1}, Do[b = bmax[n]; If[b > bm, s = Join[s, ConstantArray[n, b - bm]]; bm = b], {n, 3, nmax}]; s]; seq[100000]
%o A388288 (PARI) bmax(n) = {my(b = 2); while(!(sumdigits(n,b) % b), b++); b--; b;}
%o A388288 list(nmax) = {my(bm = 1); for(n = 3, nmax, b = bmax(n); if(b > bm, for(i = 1, b-bm, print1(n,", ")); bm = b));}
