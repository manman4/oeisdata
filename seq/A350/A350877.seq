%p A350877 if n=1 then lprint(n,L);
%p A350877 else if (L mod 2) = 0 then L := L/2;
%p A350877      else p:=nextprime(p); L:=L+p;
%p A350877      fi;
%p A350877 lprint(n,L);
%p A350877 fi;
