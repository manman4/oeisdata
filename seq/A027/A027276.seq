%o A027276 def T(n,k): # T = A026552
%o A027276     if (k==0 or k==2*n): return 1
%o A027276     elif (k==1 or k==2*n-1): return (n+2)//2
%o A027276     elif (n%2==0): return T(n-1, k) + T(n-1, k-1) + T(n-1, k-2)
