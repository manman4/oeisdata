%p A226040 s:= (p, n) -> ((n+1) mod p = 0) and (n mod (p-1) <> 0);
%p A226040 A226040 := n -> mul(z, z = select(p->s(p,n), select('isprime', [$2..n])));
%p A226040 seq(A226040(n), n=0..77);
