%o A125127 (SageMath)
%o A125127 def L(k, n):
%o A125127     if n < 0:
%o A125127         return -1
%o A125127     a = [-1]*(k-1) + [k] # [-1, -1, ..., -1, k]
%o A125127     for i in range(1, n+1):
%o A125127         a[:] = a[1:] + [sum(a)]
%o A125127     return a[-1]
