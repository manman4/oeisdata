%o A381457 (Python)
%o A381457 def a(n):
%o A381457     e, k = 0, 2
%o A381457     while k <= n:
%o A381457         j = k >> 1
%o A381457         while j > 0:
%o A381457             for i in range(n):
%o A381457                 e = (e << 1) | ((i & j) == 0)
%o A381457             j >>= 1
%o A381457         k <<= 1
%o A381457     return e
%o A381457 print([a(n) for n in range(1,16)])
