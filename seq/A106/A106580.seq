%t A106580 t[_, 0]= 1; t[n_, k_]:= t[n, k] = t[n, k-1] + Sum[t[n-2j, k-j], {j, 1, Min[k, Floor[n/2], n-k]}]; Table[t[n, k], {n, 0, 12}, {k, 0, n}]//Flatten (* _Jean-Fran√ßois Alcover_, Jan 08 2014, after Maple *)
