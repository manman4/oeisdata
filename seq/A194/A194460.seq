%o A194460 def A194460(n):
%o A194460     if n == 1: return 1
%o A194460     cf = CachedFunction(lambda i,j,n: binomial(n-1-i+n-1-j,n-i-1)-binomial(n-1-i+n-1-j, n-i-j-1))
