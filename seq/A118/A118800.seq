%t A118800 (* This program generates A118800 as the mirror of the self-fusion of Pascal's triangle. *)
%t A118800 z = 8; a = 1; b = 1; c = 1; d = 1;
%t A118800 p[n_, x_] := (a*x + b)^n ; q[n_, x_] := (c*x + d)^n;
%t A118800 t[n_, k_] := Coefficient[p[n, x], x^k]; t[n_, 0] := p[n, 0];
%t A118800 w[n_, x_] := Sum[t[n, k]*q[n + 1 - k, x], {k, 0, n}]; w[-1, _] = 1;
%t A118800 g[n_] := CoefficientList[w[n, -x], x];
%t A118800 TableForm[Table[Reverse[Abs@g[n]], {n, -1, z}]]
%t A118800 Flatten[Table[Reverse[Abs@g[n]], {n, -1, z}]] (* A081277 *)
%t A118800 TableForm[Table[g[n], {n, -1, z}]]
%t A118800 Flatten[Table[g[n], {n, -1, z}]] (* A118800 *)
%t A118800 (* _Clark Kimberling_, Aug 04 2011 *)
%t A118800 T[ n_, k_] := If[ n<0 || k<0, 0, (-1)^k 2^(n-k) (Binomial[ n, k] + Binomial[ n-1, n-k]) / 2]; (* _Michael Somos_, Nov 25 2016 *)
%o A118800 (PARI) {T(n,k)=if(n==0&k==0,1,(-1)^k*2^(n-k)*(binomial(n,k)+binomial(n-1,k-1))/2)}
%o A118800 for(n=0,12,for(k=0,n,print1(T(n,k),", "));print(""))
%o A118800 (PARI) /* Chebyshev Polynomials as Antidiagonals: */
%o A118800 {T(n,k)=local(Ox=x*O(x^(2*k))); polcoeff(((1+sqrt(1-x^2+Ox))^(n+k)+(1-sqrt(1-x^2+Ox))^(n+k))/2,2*k,x)}
%o A118800 for(n=0,12,for(k=0,n,print1(T(n,k),", "));print(""))
