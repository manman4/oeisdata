%p A121953 with(combinat);
%p A121953 a:= proc(n) option remember;
%p A121953 if n < 4 then fibonacci(n-1)
%p A121953 else (n-2)*a(n-2) + a(n-3)
%p A121953 fi;
%p A121953 end proc;
