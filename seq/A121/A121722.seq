%p A121722 seq(seq( 1 + k*binomial(n+1,2), k=0..n), n=0..10); # _G. C. Greubel_, Nov 21 2019
%t A121722 f[n_Integer] = Module[{a}, a[n]/.RSolve[{a[n]==2*a[n-1]-a[n-2]+m, a[0] ==1, a[1]==1+m}, a[n], n][[1]]//FullSimplify] (* formula of triangle *)
