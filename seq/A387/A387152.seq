%o A387152 from functools import cache
%o A387152 @cache
%o A387152 def T(n: int, k: int) -> int:
%o A387152     if n == 0: return 1
%o A387152     if k == 0: return 0
%o A387152     return (n - 1) * T(n - 1, k) + T(n, k - 1) - (n - 2) * T(n - 1, k - 1)
