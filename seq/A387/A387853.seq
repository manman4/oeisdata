%N A387853 Least integer k = Sum_{j=1..n} x_j such that sigma(k) = Sum_{j=1..n} sigma(x_j), where x_j are positive integers.
%H A387853 Giovanni Resta, <a href="/A387853/b387853.txt">Table of n, a(n) for n = 1..100</a>
%e A387853 a(7) = 11 because 11 = 1 + 1 + 1 + 1 + 1 + 1 + 5 and sigma(11) = 6*sigma(1) + sigma(5) = 12.
%e A387853 a(8) = 21 because 21 = 1 + 2 + 2 + 2 + 3 + 3 + 4 + 4 and sigma(21) = sigma(1) + 3*sigma(2) + 2*sigma(3) + 2*sigma(4) = 32.
%p A387853 with(numtheory): with(combinat): P:=proc(q) local a,b,j,ok,k,n,v; v:=[]; for j from 1 to 67 do
%p A387853 ok:=1; for n from j to q do a:=partition(n); for k from 1 to nops(a) do
%p A387853 if nops(a[k])=j then if sigma(n)=add(sigma(b),b=a[k]) then v:=[op(v),n]; ok:=0; break;
%p A387853 fi; fi; od; if ok=0 then break; fi; od; od;  op(v); end: P(10^2);
%o A387853 (PARI) isok(k,n) = forpart(p=k, if (sigma(k) == sum(i=1, #p, sigma(p[i])), return(1)), , [n,n]);
%o A387853 a(n) = my(k=1); while (!isok(k, n), k++); k; \\ _Michel Marcus_, Sep 10 2025
