%o A387907 (Haskell)
%o A387907 import Data.Char
%o A387907 a387907 n = firstOddDigitPos $ 2^n
%o A387907 firstOddDigitPos n =
%o A387907   let digits = map digitToInt (show n)
%o A387907       indexedDigits = zip [1..] digits
%o A387907       oddPositions = filter (\(pos, digit) -> odd digit) indexedDigits
%o A387907   in case oddPositions of
%o A387907        [] -> 0
%o A387907        (x:_) -> fst x
