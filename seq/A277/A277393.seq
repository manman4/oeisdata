%o A277393 (SageMath)
%o A277393 def A():
%o A277393     yield 1
%o A277393     yield 2
%o A277393     n, a, h, i = 2, 6, -2, 2
%o A277393     while True:
%o A277393         yield a
%o A277393         n += 1
%o A277393         a *= n << 1
%o A277393         if is_even(n):
%o A277393             i += 4
%o A277393             h *= -i
%o A277393             a += h
%o A277393 H = A(); print([next(H) for _ in range(20)]) # _Peter Luschny_, Oct 16 2016
