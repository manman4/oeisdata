%o A277579 (SageMath)
%o A277579 def a(n):
%o A277579     AS = lambda s: abs(sum((-1)^i*t for i,t in enumerate(s)))
%o A277579     EP = lambda s: sum((t+1)%2 for t in s)
%o A277579     return sum(AS(p) == EP(p) for p in Partitions(n))
