%t A238761 h[n_] := (n - ((1 - (-1)^n)/2))/2;
%t A238761 binom2[n_, k_] := n!/(h[n-k]! h[n+k]!);
%t A238761 T[n_, k_] := binom2[n+k, n-k+1] (n-k+1)/(n+k);
