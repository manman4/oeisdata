%o A047836 (Python)
%o A047836 from itertools import count, islice
%o A047836 from sympy import divisors
%o A047836 def A047836_gen(startvalue=1): # generator of terms >= startvalue
%o A047836     for k in count(max(startvalue,1)):
%o A047836         ds = divisors(k)
%o A047836         for i in range(len(ds)-1):
%o A047836             if (ds[i]<<1)<ds[i+1]:
%o A047836                 break
%o A047836         else:
%o A047836             yield k<<1
%o A047836 A047836_list = list(islice(A047836_gen(),40)) # _Chai Wah Wu_, Oct 22 2025
