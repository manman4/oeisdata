%o A003571 (SageMath)
%o A003571 def A003571(n):
%o A003571     s, m, N = 0, 1, 3*n + 1
%o A003571     while True:
%o A003571         k = N + m
%o A003571         v = valuation(k, 3)
%o A003571         s += v
%o A003571         m = k // 3^v
%o A003571         if m == 1: break
%o A003571     return s
