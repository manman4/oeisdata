%o A227054 (Python)
%o A227054 from sympy.ntheory.primetest import is_square
%o A227054 from sympy.solvers.diophantine.diophantine import diop_DN
%o A227054 def A227054(n):
%o A227054     if is_square((n<<3)+1): return 1
%o A227054     if is_square(n): return 0
%o A227054     c, a, b = None, diop_DN(n,1-n), diop_DN(n,1)
%o A227054     while c is None:
%o A227054         a2 = []
%o A227054         for r, s in a:
%o A227054             if (sa:=abs(s))>1 and sa&1:
%o A227054                 c = min(c,sa) if c is not None else sa
%o A227054             for t, u in b:
%o A227054                 w, d = r*u+s*t, r*t+s*u*n
%o A227054                 if (wa:=abs(w))>1 and wa&1:
%o A227054                     c = min(c,wa) if c is not None else wa
%o A227054                 a2.extend([(d,w),(d,-w),(-d,w),(-d,-w)])
%o A227054         a.extend(a2)
%o A227054     return c*c-1>>3 # _Chai Wah Wu_, Oct 11 2025
