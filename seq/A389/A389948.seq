%o A389948 from itertools import chain
%o A389948 def traverse_upper_halfplane(n):
%o A389948     points = [(0, 0)]
%o A389948     arch = 1
%o A389948     sign = 1
%o A389948     while len(points) < n:
%o A389948         for y in range(arch+1):
%o A389948             points.append((sign*arch, y))
%o A389948         for x in range(arch-1, -arch-1, -1):
%o A389948             points.append((sign*x, arch))
%o A389948         for y in range(arch-1, -1, -1):
%o A389948             points.append((-sign*arch, y))
%o A389948         arch += 1
%o A389948         sign = - sign
%o A389948     return points[:n]
%o A389948 print(list(chain(*traverse_upper_halfplane(100))))
