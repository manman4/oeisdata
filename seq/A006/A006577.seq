%o A006577 def a(n):
%o A006577     if n==1: return 0
%o A006577     x=0
%o A006577     while True:
%o A006577         if n%2==0: n//=2
%o A006577         else: n = 3*n + 1
%o A006577         x+=1
%o A006577         if n<2: break
%o A006577     return x
