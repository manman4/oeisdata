%p A052542     option remember;
%p A052542     if n <=2 then
%p A052542         2^n;
%p A052542     else
%p A052542         2*procname(n-1)+procname(n-2) ;
%p A052542     end if;
%p A052542 end proc: # _R. J. Mathar_, Sep 23 2016
