%t A116528 b[0]:= 0; b[1]:= 1; b[n_?EvenQ]:= b[n] = b[n/2]; b[n_?OddQ]:= b[n] = 2*b[(n-1)/2] + b[(n+1)/2]; a = Table[b[n], {n, 1, 70}]
