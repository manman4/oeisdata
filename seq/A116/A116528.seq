%p A116528 A116528 := proc(n)
%p A116528    option remember;
%p A116528    if n <= 1 then
%p A116528       n;
%p A116528    elif type(n,'even') then
%p A116528       procname(n/2) ;
%p A116528    else
%p A116528       2* procname((n-1)/2)+procname((n+1)/2) ;
