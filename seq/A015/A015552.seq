%p A015552 seq(round(7^n/8),n=0..25); # _Mircea Merca_, Dec 28 2010
%t A015552 k=0;lst={k};Do[k=7^n-k;AppendTo[lst, k], {n, 0, 5!}];lst (* _Vladimir Joseph Stephan Orlovsky_, Dec 11 2008 *)
